          </select>
              <span asp-validation-for="@Model.GenreId" style="color:green"></span>
        </div>*@
                            <div class="form-group col">
                                <input placeholder="Total Pages" asp-for="@Model.GenreId" class="form-control" />
                                <span asp-validation-for="@Model.GenreId" style="color:green"></span>
                            </div>

                            <div class="form-group col">
                                <input type="file" asp-for="@Model.BookImage" value="" />
                                <span asp-validation-for="@Model.BookImage" style="color:green"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col">
                        <textarea cols="40" rows="3" placeholder="Description" asp-for="@Model.Description"></textarea>
                    </div>
                    <div class="form-group col d-flex justify-content-center align-content-center add-book-btn pb-2">
                        <button type="submit" class="btn form-btn btn-dark" id="add-book-button">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>