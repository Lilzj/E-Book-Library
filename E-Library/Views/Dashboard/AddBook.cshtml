                    <div class="form-group col">
                        <input placeholder="ISBN" asp-for="@Model.ISBN" class="form-control" />
                        <span asp-validation-for="@Model.ISBN" style="color:green"></span>
                    </div>
                    <div class="form-group col">
                        <input placeholder="Total Pages" asp-for="@Model.TotalPages" class="form-control" />
                        <span asp-validation-for="@Model.TotalPages" style="color:green"></span>
                    </div>
                    <div class="form-group col">
                        <input placeholder="Publisher" asp-for="@Model.Publisher" class="form-control" />
                        <span asp-validation-for="@Model.Publisher" style="color:green"></span>
                    </div>
                    <div class="form-group col">
                        <div class="container">
                            <div class="row">
                                <input type="date" asp-for="@Model.PublishDate" name="name" value="" class="col" />
                                <span asp-validation-for="@Model.PublishDate" style="color:green"></span>
                            </div>
                        </div>

                    </div>
                    <div class="container">
                        <div class="row">
