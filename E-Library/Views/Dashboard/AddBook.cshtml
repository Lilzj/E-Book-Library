    <div class="container-fluid d-flex justify-content-center align-content-center mt-2">
        <div class="col-md-6 book-layout-container">
            <a href="#add-book-form" data-toggle="collapse" id="add-book-form-title" class="collapse-header" style="width:90%;">Add Books</a>
            <div id="add-book-form" class="collapse show">
                <form method="post" asp-controller="DashBoard" class="Add-book-form" asp-action="AddBook" enctype="multipart/form-data">
                    <div class="form-group col">
                        <input placeholder="Title" asp-for=@Model.Title class="form-control" />
                        <span asp-validation-for=@Model.Title style="color:green"></span>
                    </div>
                    <div class="form-group col">
                        </i><input placeholder="Author" asp-for="@Model.Author" class="form-control" />
